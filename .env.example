# Configuración del Servidor
NODE_ENV=development
PORT=8082
API_PREFIX=/api

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TIMEOUT=2000

# Pool de conexiones Redis
REDIS_POOL_MAX=10
REDIS_POOL_MIN=2

# Configuración de Matchmaking
MATCHMAKING_INTERVAL=1500
STATS_LOG_INTERVAL=10000
QUEUE_EXPIRY_MINUTES=30
ROOM_EXPIRY_HOURS=2

# Jugadores por modo
MAX_PLAYERS_PVP=2
MAX_PLAYERS_BOSS=4
MIN_PLAYERS_FOR_ROOM=2

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined